<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="d">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="c"/>
      </xs:sequence>
      <xs:attribute ref="baz:a" xmlns:baz="http://baz"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="a">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="b"/>
        <xs:element ref="d" maxOccurs="unbounded" minOccurs="0"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="c">
    <xs:complexType>
      <xs:simpleContent>
        <xs:extension base="xs:QName" xmlns:xs="http://www.w3.org/2001/XMLSchema">
          <xs:attribute ref="foo:n" xmlns:foo="http://foo"/>
          <xs:attribute ref="baz:a" xmlns:baz="http://baz"/>
          <xs:attribute ref="foo:r" xmlns:foo="http://foo"/>
          <xs:attribute ref="baz:b" xmlns:baz="http://baz"/>
        </xs:extension>
      </xs:simpleContent>
    </xs:complexType>
  </xs:element>
  <xs:element name="b">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="c"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>